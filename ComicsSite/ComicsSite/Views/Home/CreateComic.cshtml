<body class="signup_container">
    @using (Html.BeginForm("PostCM", "Home", FormMethod.Post))
    {
        <div class="signupST">
            <h1>Create a Comic</h1>
            <div class="flex-input">
                <Label for=""> Title: </Label>
                <input type="text" id="title" name="title">
            </div>
            <div class="flex-input">
                <Label for="">Author: </Label>
                <input type="text" id="author" name="author" value="@Session["userID"].ToString()" readonly>
            </div>
            <div>
                <input class="submit" type="submit" value="Create Comic!" />
            </div>
        </div>
    }
</body>

</html>